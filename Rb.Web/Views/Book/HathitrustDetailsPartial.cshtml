@using Rb.Web.Helpers
@model Rb.Web.Models.BookDetailsModel.HathitrustDetailsModel

<div class="box box-green">
    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>Автор</dt>
                <dd class="details-right">@Html.DisplayFor(model => model.Author)</dd>

                <dt>Про книгу</dt>
                <dd class="details-right">@Html.DisplayFor(model => model.Description)</dd>

                <dt>Мова</dt>
                <dd class="details-right">@Html.DisplayFor(model => model.Language)</dd>

                <dt>Видавництво</dt>
                <dd class="details-right">@Html.DisplayFor(model => model.Publisher)</dd>

                <dt>Посилання</dt>
                @foreach (var link in Model.Links)
                {
                    <dd class="details-right">@Html.HtmlLink(link, link, null)</dd>
                }

                <dt>Джерело</dt>
                <dd class="details-right">@Html.HtmlLink(Model.Url, Model.Url, null)</dd>
            </dl>
        </div>
    </div>
</div>